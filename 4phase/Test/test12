{SELECTION SORT FOR ELEMENTS LESS THAN 40}
PROGRAM SELECTION;
	VAR K,LOC,TEMP:INTEGER;
	ARR:ARRAY[1..40] OF INTEGER;
	FUNCTION MINLOC (ARR:ARRAY[1..40] OF INTEGER;K,N,LOC:INTEGER):INTEGER;
	VAR J:INTEGER;
		BEGIN
			MIN:=A[K];
			LOC:=K;
			K:=K+1;
			WHILE J<=N DO 
				BEGIN
					IF MIN > A[J] THEN
					BEGIN
						MIN:=A[J];
						LOC:=A[J];
						LOC:=J
					END;
					J:=J+1
				END;
			RETURN LOC
		END;

	BEGIN
		READ(N);
		READ(ARR);
		K:=1;
		WHILE K<N DO
		BEGIN
			LOC:=MINLOC(ARR,K,N,LOC);
			TEMP:=A[K];
			A[K]:=A[LOC];
			A[LOC]:=TEMP
		END
	END
				
