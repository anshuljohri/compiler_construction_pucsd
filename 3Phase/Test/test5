PROGRAM PUREXPASCALXSTRINGS;

VAR  LONGXSTRING  : ARRAY[1..25] OF CHARACTER;
     STRING10     : ARRAY[1..10] OF CHARACTER;
     STRING12     : ARRAY[1..12] OF CHARACTER;
     
     INITIAL      : CHARACTER;
     INDEX        : INTEGER;

BEGIN  
   FIRSTXNAME := 'JOHN';
   INITIAL := 'Q';
   LASTXNAME := 'DOE';
   WRITE(FIRSTXNAMESTXNAME);

   WHILE INDEX <= 10 DO
      FULLXNAME[INDEX] := FIRSTXNAME[INDEX];

   FULLXNAME[11] := INITIAL;
   
   WRITE(FULLXNAME)
END
